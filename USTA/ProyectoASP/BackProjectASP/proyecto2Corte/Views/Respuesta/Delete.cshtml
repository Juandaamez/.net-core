@model proyecto2Corte.Models.Respuesta

@{
    ViewData["Title"] = "Eliminar respuesta";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <h3>Eliminar respuesta</h3>
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdRespuesta" />
            <div class="form-group">
                <label asp-for="RespuestaTexto" class="control-label"></label>
                <textarea asp-for="RespuestaTexto" class="form-control" readonly></textarea>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Confirmar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
